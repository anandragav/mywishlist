{
  "manifest_version": 3,
  "name": "Universal Shopping Wishlist",
  "version": "1.0",
  "description": "Save products from any shopping site to a unified wishlist in your browser bookmarks",
  "permissions": [
    "activeTab",
    "bookmarks",
    "scripting",
    "contextMenus",
    "tabs"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "favicon.ico",
      "32": "favicon.ico",
      "48": "favicon.ico",
      "128": "favicon.ico"
    }
  },
  "icons": {
    "16": "favicon.ico",
    "32": "favicon.ico",
    "48": "favicon.ico",
    "128": "favicon.ico"
  }
}