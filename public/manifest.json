{
  "manifest_version": 3,
  "name": "Product Comparison Extension",
  "version": "1.0",
  "description": "Shows similar products from other vendors in your location",
  "permissions": ["activeTab", "sidePanel"],
  "action": {
    "default_icon": {
      "16": "favicon.ico",
      "32": "favicon.ico",
      "48": "favicon.ico",
      "128": "favicon.ico"
    }
  },
  "icons": {
    "16": "favicon.ico",
    "32": "favicon.ico",
    "48": "favicon.ico",
    "128": "favicon.ico"
  },
  "side_panel": {
    "default_path": "index.html"
  }
}